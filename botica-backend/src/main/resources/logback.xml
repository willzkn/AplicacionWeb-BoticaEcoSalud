<logger name="com.botica.botica_backend.Controller.UsuarioController" level="INFO" additivity="false">
  <appender-ref ref="LOGIN_FILE" />
</logger>

<appender name="LOGIN_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
  <file>logs/login-events.log</file>
  <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
    <fileNamePattern>logs/login-events.%d{yyyy-MM-dd}.log</fileNamePattern>
    <maxHistory>30</maxHistory>
  </rollingPolicy>
  <encoder>
    <pattern>%d{HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
  </encoder>
</appender>
